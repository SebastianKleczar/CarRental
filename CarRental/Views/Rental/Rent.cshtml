    <div class="container py-5">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>

        @using (Html.BeginForm("Rent", "Rental", FormMethod.Post, new { enctype = "multipart/form-data", @class = "card border-0 shadow p-4" }))
        {
            <div style="display:none">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } });
                @Html.EditorFor(model => model.ClientId, new { htmlAttributes = new { @class = "form-control", @Value = Model.ClientId } });
                @Html.EditorFor(model => model.CarId, new { htmlAttributes = new { @class = "form-control", @Value = Model.CarId} });
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.RentalDate, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.RentalDate, new { type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.RentalDate, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ReturnDate, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ReturnDate, new { type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ReturnDate, "", new { @class = "text-danger" })
            </div>

            <input type="submit" value="Wyślij" class="btn btn-primary" />
        }
    </div>




