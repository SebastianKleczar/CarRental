@model CarRental.DataBase.Models.Review

@{
    ViewData["Title"] = "Add Review";
}

<h1>AddReview</h1>

<h4>Review</h4>
<hr />
<div class="row">


    <div class="container py-5">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>

        @using (Html.BeginForm("AddReview", "Review", FormMethod.Post, new { enctype = "multipart/form-data", @class = "card border-0 shadow p-4" }))
        {
            <div style="display:none">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } });
                @Html.EditorFor(model => model.ClientId, new { htmlAttributes = new { @class = "form-control", @Value = Model.ClientId } });
                @Html.EditorFor(model => model.CarId, new { htmlAttributes = new { @class = "form-control", @Value = Model.CarId} });
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rating, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Rating, new { type = "number", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Rating, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Text, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Text, new { type = "text", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
            </div>

            <input type="submit" value="Wyślij" class="btn btn-primary" />
        }
    </div>




